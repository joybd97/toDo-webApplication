
@{
    ViewData["Title"] = "Delete";
}

@model info 

<form method="post" asp-action="DeleteInfo">
    <input asp-for="Id" hidden />

    <div class="border p-3 mt-4">
        <div>
            <h2>Delete Entry</h2>
            <hr />
        </div>

        <div>
            <label asp-for="medicineName">Medicine Name</label>
            <input asp-for="medicineName" disabled class="form-control" />
            <span asp-validation-for="medicineName" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Date">Date and time</label>
            <input asp-for="Date" disabled class="form-control" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Note">Note</label>
            <input asp-for="Note" disabled class="form-control" />
            <span asp-validation-for="Note" class="text-danger"></span>

        </div>
        <br /> 

        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="info" asp-action="Index" class="btn btn-secondary">Back to List</a>

    </div>

</form>

@section Scripts{
@{
    <partial name="_ValidationScriptsPartial" />
}
}

